{
  "Lua.diagnostics.globals": ["vim", "P", "Snacks"],
  "typescript.preferences.importModuleSpecifier": "relative",
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".git/",
        ".hg/"
      ],
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/clangd"
        }
      }
    },
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filetypes": [
        "javascript",
        "javascriptreact",
        "javascript.jsx",
        "typescript",
        "typescriptreact",
        "typescript.tsx"
      ],
      "initializationOptions": {
        "host": "coc.nvim"
      }
    }
  },
  "workspace.ignoredFolders": ["$HOME", "$HOME/.cargo/**", "$HOME/.rustup/**"],
  "diagnostic.virtualTextCurrentLineOnly": true,
  //"tsserver.disableAutomaticTypescriptReacTypeAcquisition": true,
  //  "list.source.files.excludePatterns": [
  //    "**/node_modules/**",
  //    "**/node_modules/**/.*",
  //    "**/node_modules/**/.*/**"
  //  ],
  "coc.source.file.ignorePatterns": [
    //    "**/node_modules/**",
    //    "**/node_modules/**/.*",
    //    "**/node_modules/**/.*/**"
  ],
  "tsserver.enable": true,
  // "tsserver.log": "verbose",
  "tsserver.maxTsServerMemory": 12000,
  "tsserver.useLocalTsdk": true,
  "coc.preferences.formatOnSave": true,
  "python.formatting.provider": "autopep8",
  //  "coc.preferences.formatOnSaveFiletypes": [
  //    "css",
  //    "markdown",
  //    "scss",
  //    "javascript",
  //    "typescript",
  //    "yaml",
  //    "json",
  //    "rust"
  //  ],
  "codeLens.enable": false
}
